<form>
  <div class="form-group">
    <label for="exampleInputName">機構名稱</label>
    <input type="text" name="name" readonly class="form-control" value="{{profile.name}}">
  </div>
  <div class="form-group">
    <label for="phone">電話</label>
    <input type="text" name="phone" readonly class="form-control" value="{{profile.phone}}">
  </div>
  <div class="form-group">
    <label for="address">地址</label>
    <input type="text" name="address" readonly class="form-control" value="{{profile.address}}">
  </div>
  <div class="form-group">
    <label for="atm">ATM</label>
    <input type="text" name="atm" readonly class="form-control" value="{{profile.ATM}}">
  </div>
  <div class="form-group">
    <label for="exampleInputEmail1">Email</label>
    <input type="text" name="email" readonly class="form-control" value="{{profile.email}}"
      aria-describedby="emailHelp">
  </div>
  {{#unless user.role}}
  <a class="btn btn-outline-primary" class="card-link" href="/admin/profile/{{profile.id}}/edit"
    role="button">編輯</a>{{/unless}}
  <a class="btn btn-outline-primary" href="javascript:history.back()" role="button">回上一頁</a>
</form>