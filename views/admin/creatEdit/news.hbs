<!--Card view-->
{{#if news}}
<form action="/admin/newses/{{news.id}}?_method=PUT" method="POST" enctype="multipart/form-data">
  {{else}}
  <form action="/admin/newses" method="POST" enctype="multipart/form-data">
    {{/if}}

    <div class="input-group mb-3">
      <div class="custom-file">
        <input type="file" class="custom-file-input" id="myFile" name="image" value="{{news.image}}" accept="image/*"
          onchange="myFunction()">
        <label class="custom-file-label text-muted" for="customFile" id="demo">新聞圖片</label>
      </div>
    </div>

    <div class="input-group mb-3">
      <div class="input-group-prepend">
        <span class="input-group-text" id="basic-addon1">新聞標題</span>
      </div>
      <input type="text" class="form-control" name="name" id="name" value="{{news.name}}">
    </div>

    <div class="input-group mb-3">
      <div class="input-group-prepend">
        <span class="input-group-text" id="basic-addon1">內文</span>
      </div>
      <textarea class="form-control" id="description" name="description" rows="3">{{news.description}}</textarea>
    </div>


    <button type="submit" class="btn btn-primary">送出</button>
  </form>
  <!--Card view end-->

  <!--image preview script-->
  <script type='text/javascript'>
    function myFunction() {
      var x = document.getElementById("myFile").value;
      document.getElementById("demo").innerHTML = x;
    }
  </script>