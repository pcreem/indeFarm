<form action="/signup" method="POST">
  <div class="text-center mb-4">
    <h1 class="h3 mb-3 font-weight-normal">Sign Up</h1>
  </div>
  <div class="form-group">
    <label for="exampleInputName">機構名稱</label>
    <input type="text" name="name" class="form-control" required>
  </div>
  <div class="form-group">
    <label for="phone">電話</label>
    <input type="text" name="phone" class="form-control" required>
  </div>
  <div class="form-group">
    <label for="address">地址</label>
    <input type="text" name="address" class="form-control" required>
  </div>
  <div class="form-group">
    <label for="atm">ATM</label>
    <input type="text" name="atm" class="form-control" placeholder="若要銷售農產需填資訊">
  </div>
  <div class="form-group">
    <label for="exampleInputEmail1">Email</label>
    <input type="text" name="email" class="form-control" aria-describedby="emailHelp" required>
  </div>
  <div class="form-group">
    <label for="password">Password</label>
    <input type="password" name="password" class="form-control" required>
  </div>
  <div class="form-group">
    <label for="passwordCheck">Password Check</label>
    <input type="password" name="passwordCheck" class="form-control" required>
  </div>
  <button type="submit" class="btn btn-primary btn-lg btn-block">Submit</button>

  <a class="btn btn-outline-dark btn-lg btn-block" href="/signin" role="button">SignIn</a>
</form>