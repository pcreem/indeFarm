<div class="container mt-30" data-spy="scroll" data-target="#navbar-example2" data-offset="0">

  <!--Products-->
  <p id="agrifood"></p>
  <h2 class="mb-10 text-center">Best Sellers</h2>
  <br class="featurette-divider">
  <div class="card-deck row">
    {{#each agrifoods}}
    <div class="col-12 col-sm-4 mb-4">
      <div class="card">
        <img src="{{this.image}}" class="card-img-top" alt="...">
        <div class="card-body">
          <h5 class="card-title">{{this.name}}</h5>
          <p class="text-muted">$ {{this.price}}</p>
        </div>
      </div>
    </div>

    {{/each}}

  </div>


  <hr class="featurette-divider">
  <h2 class="mb-10 text-center" id="news">News</h2>
  <br class="featurette-divider">
  <div class="card-deck row">
    {{#each news}}
    <div class="col-12 col-sm-4 mb-4">
      <div class="card">
        <img src="{{this.image}}" class="card-img-top" alt="...">
        <div class="card-body">
          <h5 class="card-title">{{this.name}}</h5>
        </div>
        <div class="card-footer">
          <small class="text-muted">{{moment this.createdAt}}</small>
        </div>
      </div>
    </div>
    {{/each}}

  </div>
  <br class="featurette-divider">
  <br class="featurette-divider">
  <!--/.container-->